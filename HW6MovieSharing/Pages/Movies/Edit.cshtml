@page
@model HW6MovieSharing.Pages.Movies.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Movie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Movie.ID" />
            <div class="form-group">
                <label asp-for="Movie.Title" class="control-label"></label>
                <input asp-for="Movie.Title" class="form-control" />
                <span asp-validation-for="Movie.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.Category" class="control-label"></label>
                <input asp-for="Movie.Category" class="form-control" />
                <span asp-validation-for="Movie.Category" class="text-danger"></span>
            </div>          
            <div class="form-group">
                <label asp-for="Movie.SharedWithFirstName" class="control-label"></label>
                <input asp-for="Movie.SharedWithFirstName" class="form-control" />
                <span asp-validation-for="Movie.SharedWithFirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.SharedWithLastName" class="control-label"></label>
                <input asp-for="Movie.SharedWithLastName" class="form-control" />
                <span asp-validation-for="Movie.SharedWithLastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.SharedwithEmailAddress" class="control-label"></label>
                <input asp-for="Movie.SharedwithEmailAddress" class="form-control" />
                <span asp-validation-for="Movie.SharedwithEmailAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.SharedDate" class="control-label"></label>
                <input asp-for="Movie.SharedDate" class="form-control" />
                <span asp-validation-for="Movie.SharedDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Movie.IsShareable" /> @Html.DisplayNameFor(model => model.Movie.IsShareable)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
